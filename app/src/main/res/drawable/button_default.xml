<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="1dp" android:top="1dp">
                <shape>
                    <corners android:radius="8dp" />
                    <solid android:color="#FEBF00" />
                    <padding android:bottom="4dp"/>
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#f7df94" android:startColor="#FEBF00" />
                    <stroke android:width="1dp" android:color="#FEBF00" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>